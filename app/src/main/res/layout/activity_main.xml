<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@color/colorBackground">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">


            <android.support.v7.widget.CardView android:layout_width="400dp"
                                                android:layout_height="400dp"
                                                android:id="@+id/card1"
                                                android:textAlignment="center"
                                                android:layout_margin="20dp"
                                                android:layout_centerHorizontal="true">

                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/ourteam"
                              android:text="Our Team"
                              android:textSize="30dp"
                              android:textStyle="bold"
                              android:layout_marginTop="10dp"
                              android:textColor="@color/colorPrimaryDark"
                              android:layout_centerHorizontal="true"/>
                    <ImageButton android:layout_width="40dp" android:layout_height="wrap_content"
                                 android:layout_centerHorizontal="true"
                                 android:layout_below="@+id/ourteam"/>

                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="100dp">

                        <ImageView android:layout_width="90dp"
                                   android:layout_height="90dp"
                                   android:src="@drawable/anh"
                                   android:id="@+id/photo1"
                                   android:layout_marginHorizontal="20dp"
                                   android:scaleType="centerCrop"/>
                        <ImageView android:layout_width="90dp"
                                   android:layout_height="90dp"
                                   android:src="@drawable/dung"
                                   android:id="@+id/photo2"
                                   android:layout_toRightOf="@+id/photo1"
                                   android:layout_marginHorizontal="10dp"
                                   android:scaleType="centerCrop"/>
                        <ImageView android:layout_width="90dp"
                                   android:layout_height="90dp"
                                   android:src="@drawable/nghia"
                                   android:id="@+id/photo3"
                                   android:layout_toRightOf="@+id/photo2"
                                   android:layout_marginHorizontal="20dp"
                                   android:scaleType="centerCrop"/>
                        <ImageView android:layout_width="90dp"
                                   android:layout_height="90dp"
                                   android:src="@drawable/phuc"
                                   android:id="@+id/photo4"
                                   android:layout_below="@+id/photo1"
                                   android:layout_marginTop="55dp"
                                   android:layout_marginLeft="60dp"
                                   android:scaleType="centerCrop"/>
                        <ImageView android:layout_width="90dp"
                                   android:layout_height="90dp"
                                   android:src="@drawable/uyen"
                                   android:id="@+id/photo5"
                                   android:layout_toRightOf="@+id/photo4"
                                   android:layout_below="@+id/photo1"
                                   android:layout_marginTop="55dp"
                                   android:layout_marginLeft="60dp"
                                   android:scaleType="centerCrop"/>

                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Ngoc Anh"
                                  android:textStyle="bold"
                                  android:textSize="15sp"
                                  android:layout_below="@+id/photo1"
                                  android:layout_marginTop="10dp"
                                  android:layout_marginHorizontal="30dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Quoc Dung"
                                  android:textStyle="bold"
                                  android:textSize="15sp"
                                  android:layout_below="@+id/photo2"
                                  android:layout_marginTop="10dp"
                                  android:layout_marginLeft="150dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Hieu Nghia"
                                  android:textStyle="bold"
                                  android:textSize="15sp"
                                  android:layout_below="@+id/photo3"
                                  android:layout_marginTop="10dp"
                                  android:layout_marginLeft="270dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Hoang Phuc"
                                  android:textStyle="bold"
                                  android:textSize="15sp"
                                  android:layout_below="@+id/photo4"
                                  android:layout_marginTop="10dp"
                                  android:layout_marginLeft="65dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Ho Uyen"
                                  android:textStyle="bold"
                                  android:textSize="15sp"
                                  android:layout_below="@+id/photo5"
                                  android:layout_marginTop="10dp"
                                  android:layout_marginLeft="230dp"/>
                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:layout_width="400dp"
                                                android:layout_height="250dp"
                                                android:id="@+id/card2"
                                                android:layout_below="@+id/card1"
                                                android:layout_margin="20dp"
                                                android:layout_centerVertical="true">
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/mission"
                              android:text="Mission"
                              android:textSize="30sp"
                              android:textStyle="bold"
                              android:layout_marginTop="10dp"
                              android:textColor="@color/colorPrimaryDark"
                              android:layout_centerHorizontal="true"/>
                    <ImageButton android:layout_width="40dp" android:layout_height="wrap_content"
                                 android:layout_centerHorizontal="true"
                                 android:layout_below="@+id/mission"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/mission"
                              android:layout_margin="25dp"
                              android:textSize="17sp"
                              android:textStyle="italic"
                              android:text="Welcome to my Android group of 5 members as shown. \n This is homework week 2 with the topic: \n Design layout has the same interface required."/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView android:layout_width="400dp"
                                                android:layout_height="360dp"
                                                android:id="@+id/card3"
                                                android:layout_below="@+id/card2"
                                                android:layout_margin="20dp"
                                                android:layout_centerVertical="true">
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/address"
                              android:text="Address"
                              android:textSize="30sp"
                              android:textStyle="bold"
                              android:layout_marginTop="10dp"
                              android:textColor="@color/colorPrimaryDark"
                              android:layout_centerHorizontal="true"/>
                    <ImageButton android:layout_width="40dp" android:layout_height="wrap_content"
                                 android:layout_centerHorizontal="true"
                                 android:layout_below="@+id/address"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/address"
                              android:layout_marginHorizontal="25dp"
                              android:textSize="17sp"
                              android:textStyle="italic"/>
                    <ImageView
                            android:layout_width="350dp"
                            android:layout_height="150dp"
                            android:src="@drawable/map"
                            android:id="@+id/map"
                            android:scaleType="centerCrop"
                            android:layout_below="@+id/address"
                            android:layout_margin="25dp"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_below="@+id/map"
                              android:layout_margin="20dp"
                              android:textSize="17sp"
                              android:textStyle="italic"
                              android:text="University of Science \n 227 Nguyen Van Cu Street, District 5, Ho Chi Minh City."/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>